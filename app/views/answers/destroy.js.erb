<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |message| %>
    $('.answer_errors').html('<%= j message %>');
  <% end %>
<% else %>
  <% if @answer.destroyed? %>
    $('<%= "#answer_body_#{ @answer.id }" %>').remove();
  <% end %>
<% end %>

$("#flash").html('<%= j render partial: "shared/notice_banner" %>');
